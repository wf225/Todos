{
  "name": "hello-typescript",
  "version": "1.0.0",
  "description": "## INSTALL ``` npm install -g typescript ```",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "debug": "node --debug-brk --inspect ./node_modules/jest/bin/jest -i"
  },
  "author": "Bill Wu",
  "license": "ISC",
  "dependencies": {
    "typescript": "^2.3.3"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.22",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/build/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true
  }
}