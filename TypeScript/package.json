{
  "name": "hello-typescript",
  "version": "1.0.0",
  "description": "## INSTALL ``` npm install -g typescript ```",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf build .serverless coverage",
    "build": "tsc",
    "test": "jest",
    "debug": "node --debug-brk --inspect ./node_modules/jest/bin/jest -i"
  },
  "author": "Bill Wu",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.22",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "typescript": "^2.3.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/build/**/?(*.)(spec|test).(ts|js)?(x)"],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true
  }
}