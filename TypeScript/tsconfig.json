{
    "compilerOptions": {
        // "module": "es6",
        // "noImplicitAny": true,
        // "removeComments": true,
        // "preserveConstEnums": true,        
        // "sourceMap": false
        // "outFile": "output/tsc.js",
        "outDir": "build",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSources": true,
        "declaration": true,
        "removeComments": true,
        "noImplicitAny": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "**/*.spec.ts"
    ]
}